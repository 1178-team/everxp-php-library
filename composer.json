{
    "name": "everxp/php",
    "description": "PHP library for the EverXP API.",
    "homepage": "https://github.com/1178-team/everxp-php-library",
    "license": "Apache-2.0",
    "keywords": [
        "everxp",
        "everxp-php",
        "php-library",
        "api"
    ],
    "type": "library",
    "require": {
        "php": ">=7.2", // Updated PHP version for better compatibility and security
        "ext-curl": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "Everxp\\": "src/"
        }
    },
    "authors": [
        {
            "name": "1178 Team",
            "email": "amit@everxp.com" // Optional but recommended
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5" // Add for unit testing
    },
    "scripts": {
        "test": "phpunit" // Add for running tests with Composer
    }
}
